<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="view_task_form2" model="ir.ui.view">
    <field name="name">project.task.form.inherit.git</field>
    <field name="model">project.task</field>
    <field name="priority">40</field>
    <field name="inherit_id" ref="project.view_task_form2" />
    <field name="arch" type="xml">
      <xpath expr="//notebook" position="inside">
        <page name="description_page" string="Pull Request">
          <field name="git_task_ids" mode="list" readonly="1">
            <list no_create="1">
              <field name="name" />
              <field
                name="state"
                widget="badge"
                decoration-success="state == 'open'"
                decoration-warning="state == 'merged'"
                decoration-danger="state == 'closed'"
              />
            </list>
          </field>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
