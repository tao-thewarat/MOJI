<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="view_task_form2" model="ir.ui.view">
    <field name="name">project.task.form.inherit.sequence</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_form2" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='priority']" position="after">
        <field name="sequence" class="me-2" style="width: fit-content;" nolabel="1" />
      </xpath>
    </field>
  </record>

  <record id="view_task_kanban" model="ir.ui.view">
    <field name="name">project.task.kanban.inherit.sequence</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_kanban" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='subtask_count']" position="after">
        <field name="sequence" />
      </xpath>
      <xpath
        expr="//t[@t-name='card']//main//field[@name='name']"
        position="attributes"
      >
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//t[@t-name='card']//main//field[@name='name']" position="after">
        <div class="d-flex align-items-center">
          <field
            name="sequence"
            class="me-1"
            style="width: fit-content; font-weight: bold;"
            nolabel="1"
          />
          <span class="me-1">|</span>
          <field name="name" class="fw-bold fs-5" />
        </div>
      </xpath>
    </field>
  </record>
</odoo>
